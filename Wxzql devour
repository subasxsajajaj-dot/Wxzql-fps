-- Wxzql FPS
-- Versión modificada - tema púrpura oscuro / negro profesional

-- === CARGAR SCRIPT EXTERNO ORIGINAL ===
loadstring(game:HttpGet("https://raw.githubusercontent.com/Tigyiscute/tigystealabrainrotscript/refs/heads/main/TigyFPSDevour"))()

-- === CONFIGURACIÓN DE COLORES (nuevo tema) ===
local COLOR_PURPLE_DARK   = Color3.fromRGB(90,  30,  140)   -- morado oscuro principal
local COLOR_PURPLE_ACCENT = Color3.fromRGB(160, 60,  255)   -- morado más brillante (detalles)
local COLOR_PURPLE_GLOW   = Color3.fromRGB(200, 120, 255)   -- glow / highlight suave
local COLOR_BG_DARK       = Color3.fromRGB(12,  12,  18)    -- fondo negro muy oscuro
local COLOR_TEXT_MAIN     = Color3.fromRGB(210, 180, 255)   -- texto claro púrpura suave
local COLOR_TEXT_DIM      = Color3.fromRGB(140, 110, 180)   -- texto secundario

-- === FUNCIONES PARA GUI ===
local function waitForGui()
    local gui
    repeat
        for _, g in pairs(game.CoreGui:GetChildren()) do
            if g:IsA("ScreenGui") then
                local name = g.Name:lower()
                if string.find(name, "tigy") or string.find(name, "devour") then
                    gui = g
                    break
                end
            end
        end
        task.wait()
    until gui or not task.wait()
    return gui
end

local function hideGuiInstantly(gui)
    gui.Enabled = false
    for _, v in pairs(gui:GetDescendants()) do
        if v:IsA("Frame") or v:IsA("ScrollingFrame") then
            v.BackgroundTransparency = 1
        elseif v:IsA("TextLabel") or v:IsA("TextButton") then
            v.TextTransparency = 1
            v.BackgroundTransparency = 1
        elseif v:IsA("ImageLabel") or v:IsA("ImageButton") then
            v.ImageTransparency = 1
        end
    end
end

local function applyWxzqlTheme(gui)
    for _, obj in pairs(gui:GetDescendants()) do
        if obj:IsA("Frame") or obj:IsA("ScrollingFrame") then
            obj.BackgroundColor3 = COLOR_BG_DARK
            obj.BackgroundTransparency = 0.08
            
            local stroke = obj:FindFirstChildOfClass("UIStroke") or Instance.new("UIStroke", obj)
            stroke.Color = COLOR_PURPLE_DARK
            stroke.Thickness = 1.5
            stroke.Transparency = 0.4
            
            local corner = obj:FindFirstChildOfClass("UICorner") or Instance.new("UICorner", obj)
            corner.CornerRadius = UDim.new(0, 7)
            
        elseif obj:IsA("TextLabel") or obj:IsA("TextButton") then
            if obj.Text:find("Tigy") or obj.Text:find("Devour") then
                obj.Text = "Wxzql FPS"
            end
            
            obj.TextColor3 = COLOR_TEXT_MAIN
            obj.BackgroundTransparency = 1
            obj.TextTransparency = 0
            obj.Font = Enum.Font.GothamSemibold
            
            local stroke = obj:FindFirstChild("TextStroke") 
            if not stroke then
                stroke = Instance.new("UIStroke")
                stroke.Name = "TextStroke"
                stroke.Parent = obj
            end
            stroke.Color = COLOR_PURPLE_DARK
            stroke.Thickness = 2
            stroke.Transparency = 0.3
            
            -- glow sutil
            local glow = obj:FindFirstChildOfClass("UIGradient") or Instance.new("UIGradient", obj)
            glow.Color = ColorSequence.new({
                ColorSequenceKeypoint.new(0, COLOR_PURPLE_ACCENT),
                ColorSequenceKeypoint.new(1, COLOR_PURPLE_GLOW)
            })
            glow.Rotation = 45
            
        elseif obj:IsA("ImageLabel") or obj:IsA("ImageButton") then
            obj.ImageColor3 = COLOR_PURPLE_ACCENT
            obj.BackgroundTransparency = 1
        end
    end
end

-- === EJECUCIÓN PRINCIPAL ===
local gui = waitForGui()
if gui then
    hideGuiInstantly(gui)
    
    -- aplicar tema antes de mostrar
    applyWxzqlTheme(gui)
    
    -- pequeño retraso visual + fade in suave
    task.wait(0.15)
    gui.Enabled = true
    
    -- opcional: escalado un poco más pequeño y profesional
    for _, v in pairs(gui:GetDescendants()) do
        if v:IsA("GuiObject") then
            local scale = 0.92
            v.Size = UDim2.new(
                v.Size.X.Scale * scale, v.Size.X.Offset * scale,
                v.Size.Y.Scale * scale, v.Size.Y.Offset * scale
            )
        end
    end
end

-- (el resto del script — ESP, luces, atardecer, etc. — se mantiene igual)
